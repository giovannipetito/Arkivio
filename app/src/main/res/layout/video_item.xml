<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_margin="6dp"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/no_thumbnail"
                android:contentDescription="@string/app_name" />

        <TextView
                android:id="@+id/video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/player_title"
                android:textSize="18sp"
                android:textColor="@color/dark"
                android:textStyle="bold"
                android:maxLines="2" />

        <TextView
                android:id="@+id/video_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/player_video_id"
                android:textColor="@color/dark" />

        <TextView
                android:id="@+id/video_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/player_description"
                android:textColor="@color/dark"
                android:maxLines="2"
                android:ellipsize="end" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/go_to_player_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ico_youtube_red_1"
                            android:contentDescription="@string/app_name" />

                </RelativeLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/go_to_player_view"
                        android:textAlignment="center"
                        android:textColor="@color/rosso_1" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/go_to_player_fragment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ico_youtube_black_1"
                            android:contentDescription="@string/app_name" />

                </RelativeLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/go_to_player_fragment"
                        android:textAlignment="center"
                        android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>