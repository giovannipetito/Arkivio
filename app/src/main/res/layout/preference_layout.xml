<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:focusable="true">

    <RelativeLayout
            android:id="@+id/contacts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <RelativeLayout
                android:id="@+id/ico_container"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_users" />

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/ico_container">

            <TextView
                    android:id="@+id/contacts_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:ellipsize="end"
                    android:hint="Aggiungi contatti"
                    android:maxLines="1"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/grey_2"
                    android:textSize="16sp"
                    android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="16dp">

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_alignParentBottom="true"
              android:background="@color/grey_1" />

    </RelativeLayout>

    <TextView
            android:id="@+id/user_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:hint="UserFactory data:"
            android:textColor="@color/dark"
            android:textColorHint="@color/grey_2"
            android:textSize="16sp"
            android:visibility="visible" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_1"
                    android:minHeight="50dp"
                    android:layout_below="@+id/divider">

                <ImageView
                        android:id="@+id/img_attachment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ico_add_floating_button"
                        android:tint="@color/dark" />
                <!-- ico_chat_plus (e eliminare android:tint="@color/dark") -->

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="9dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_corner"
                        android:layout_toEndOf="@+id/img_attachment">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:hint="Inserisci il messaggio"
                            android:background="@drawable/edittext_background"
                            android:maxLines="1"
                            android:singleLine="true"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/ico_close_menu" />
                    <!-- ico_chat_next_disabled -->

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>