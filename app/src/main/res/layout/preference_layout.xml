<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="temp"
                type="it.giovanni.arkivio.model.DarkModeModel" />

        <variable
                name="presenter"
                type="it.giovanni.arkivio.presenter.DarkModePresenter" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

        <RelativeLayout
                android:id="@+id/contacts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

            <RelativeLayout
                    android:id="@+id/ico_container"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ico_users"
                        android:contentDescription="@string/app_name" />

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/ico_container">

                <TextView
                        android:id="@+id/contacts_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="6dp"
                        android:ellipsize="end"
                        android:hint="Aggiungi contatti"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:textColorHint="@color/blue_grey_500"
                        android:textColor="@{temp.labelColor}"
                        android:visibility="visible"
                        tools:textColor="@color/colorPrimary" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="58dp"
                android:layout_marginEnd="16dp">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@{temp.labelColor}"
                    tools:background="@color/colorPrimary" />

        </RelativeLayout>

        <TextView
                android:id="@+id/user_contacts_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:hint="UserFactory data:"
                android:textSize="16sp"
                android:textColorHint="@color/blue_grey_500"
                android:textColor="@{temp.labelColor}"
                android:visibility="visible"
                tools:textColor="@color/colorPrimary" />

    </LinearLayout>

</layout>