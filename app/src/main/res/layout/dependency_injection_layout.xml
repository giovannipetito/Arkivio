<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="temp"
            type="it.giovanni.arkivio.model.DarkModeModel" />

        <variable
            name="presenter"
            type="it.giovanni.arkivio.presenter.DarkModePresenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_no_injection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_24dp"
            android:textSize="24sp"
            android:textColor="@{temp.labelColor}"
            tools:textColor="@color/colorPrimary"
            tools:text="@string/dependency_injection_title" />

        <TextView
            android:id="@+id/label_injection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_no_injection"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_24dp"
            android:textSize="24sp"
            android:textColor="@{temp.labelColor}"
            tools:textColor="@color/colorPrimary"
            tools:text="@string/dependency_injection_title" />

    </RelativeLayout>

</layout>