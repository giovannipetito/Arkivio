<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <data>
    <variable
            name="temp"
            type="it.giovanni.arkivio.model.DarkModeModel" />

    <variable
            name="presenter"
            type="it.giovanni.arkivio.presenter.DarkModePresenter" />
  </data>

  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical" >

    <TextView
            android:id="@+id/label_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/search_title"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_videowall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/video_wall"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_videolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/video_list"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/fullscreen_handling"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/actionbar_overlay"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_player_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/player_controls"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_intent_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/intent_controls"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <TextView
            android:id="@+id/label_youtube_intents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/youtube_intents"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textAlignment="center" />

    <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dark"
            android:layout_gravity="center"
            android:alpha=".4" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

      <TextView
              android:id="@+id/label_youtube_version"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_margin="10dp"
              android:textColor="@color/grey_3"
              android:layout_alignParentBottom="true" />

    </RelativeLayout>

  </LinearLayout>

</layout>