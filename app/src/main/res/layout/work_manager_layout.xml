<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="temp"
            type="it.giovanni.arkivio.model.DarkModeModel" />

        <variable
            name="presenter"
            type="it.giovanni.arkivio.presenter.DarkModePresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/work_manager_title"
            android:textSize="21sp"
            android:textColor="@{temp.labelColor}"
            android:textAlignment="center"
            tools:textColor="@color/colorPrimary" />

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:background="@{temp.labelColor}"
            android:layout_gravity="center"
            android:alpha=".4"
            tools:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/label_simple_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/simple_worker_title"
            android:textSize="16sp"
            android:textColor="@{temp.labelColor}"
            android:textAlignment="center"
            tools:textColor="@color/colorPrimary" />

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@{temp.labelColor}"
            android:layout_gravity="center"
            android:alpha=".4"
            tools:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/label_blur_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/blur_worker_title"
            android:textSize="16sp"
            android:textColor="@{temp.labelColor}"
            android:textAlignment="center"
            tools:textColor="@color/colorPrimary" />

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@{temp.labelColor}"
            android:layout_gravity="center"
            android:alpha=".4"
            tools:background="@color/colorPrimary" />

    </LinearLayout>

</layout>