<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="temp"
                type="it.giovanni.arkivio.model.DarkModeModel" />

        <variable
                name="presenter"
                type="it.giovanni.arkivio.presenter.DarkModePresenter" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:clickable="true">

        <TextView
                android:id="@+id/label_date_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/date_format_title"
                android:textColor="@{temp.labelColor}"
                android:textSize="16sp"
                android:textAlignment="center"
                tools:textColor="@color/colorPrimary" />

        <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@{temp.labelColor}"
                android:layout_gravity="center"
                android:alpha=".4"
                tools:background="@color/colorPrimary" />

        <TextView
                android:id="@+id/label_date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/date_picker_title"
                android:textColor="@{temp.labelColor}"
                android:textSize="16sp"
                android:textAlignment="center"
                tools:textColor="@color/colorPrimary" />

        <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@{temp.labelColor}"
                android:layout_gravity="center"
                android:alpha=".4"
                tools:background="@color/colorPrimary" />

        <TextView
                android:id="@+id/label_calendar_view_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/calendar_view_horizontal_title"
                android:textColor="@{temp.labelColor}"
                android:textSize="16sp"
                android:textAlignment="center"
                tools:textColor="@color/colorPrimary" />

        <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@{temp.labelColor}"
                android:layout_gravity="center"
                android:alpha=".4"
                tools:background="@color/colorPrimary" />

        <TextView
                android:id="@+id/label_calendar_view_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/calendar_view_vertical_title"
                android:textColor="@{temp.labelColor}"
                android:textSize="16sp"
                android:textAlignment="center"
                tools:textColor="@color/colorPrimary" />

        <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@{temp.labelColor}"
                android:layout_gravity="center"
                android:alpha=".4"
                tools:background="@color/colorPrimary" />

        <TextView
                android:id="@+id/label_smart_working"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/smart_working_title"
                android:textColor="@{temp.labelColor}"
                android:textSize="16sp"
                android:textAlignment="center"
                tools:textColor="@color/colorPrimary" />

        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/reset_selected_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/switch_selected_days"
                android:textColor="@{temp.labelColor}"
                android:theme="@style/SwitchCompatTheme"
                tools:textColor="@color/colorPrimary"
                app:switchPadding="6dp" />

        <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@{temp.labelColor}"
                android:layout_gravity="center"
                android:alpha=".4"
                tools:background="@color/colorPrimary" />

    </LinearLayout>

</layout>