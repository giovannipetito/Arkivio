<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_A700"
    tools:context=".fragments.detail.navigation.SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen_24dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="@dimen/dimen_12dp"
            android:hint="@string/edit_first_name"
            android:background="@drawable/round_corner_1"
            android:autofillHints="@string/app_name"
            android:inputType="text"
            style="@style/EditText1" />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="@dimen/dimen_12dp"
            android:hint="@string/edit_last_name"
            android:background="@drawable/round_corner_1"
            android:autofillHints="@string/app_name"
            android:inputType="text"
            style="@style/EditText1" />

        <Button
            android:id="@+id/second_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_12dp"
            android:text="@string/second_button"
            style="@style/ButtonEmptyDarkMode" />

        <Button
            android:id="@+id/third_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_12dp"
            android:text="@string/third_button"
            style="@style/ArkLibButton" />

    </LinearLayout>

</RelativeLayout>