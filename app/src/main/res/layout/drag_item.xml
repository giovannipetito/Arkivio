<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animal_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="56dp"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/available_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_item"
            android:backgroundTint="@color/blue_A700"
            android:contentDescription="Available poster" />

        <it.giovanni.arkivio.customview.TextViewCustom
            android:id="@+id/animal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:textColor="@color/grey_1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="@string/app_name" />

    </RelativeLayout>

</RelativeLayout>