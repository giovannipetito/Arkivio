<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link statici"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
              android:layout_height="1dp"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="16dp"
              android:background="@color/white"
              android:layout_gravity="center"
              android:alpha=".4"/>

        <TextView
                android:id="@+id/webview_drive_w3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Drive W3B"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/link_drive_waw3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Drive WAW3"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/link_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Browser GitHub"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/webview_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="WebView GitHub"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/link_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Link App"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/link_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Link test"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:text="http://android-er.blogspot.com/"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center" />

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:id="@+id/webview_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="WebView Video Player"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:alpha=".4"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:text="Link dinamici"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
              android:layout_height="1dp"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="16dp"
              android:background="@color/white"
              android:layout_gravity="center"
              android:alpha=".4"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <GridLayout
                    android:id="@+id/link_utili_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:columnCount="4" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>