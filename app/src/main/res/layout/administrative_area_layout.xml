<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

        <View android:layout_width="120dp"
              android:layout_height="1dp"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="16dp"
              android:background="@color/white"
              android:layout_gravity="center"
              android:alpha=".4"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView
                        android:id="@+id/webview_drive_w3b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Drive W3B"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

                <TextView
                        android:id="@+id/link_drive_waw3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Drive WAW3"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

                <TextView
                        android:id="@+id/link_github"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Browser GitHub"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

                <TextView
                        android:id="@+id/webview_github"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="WebView GitHub"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

                <TextView
                        android:id="@+id/link_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Link App"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

                <TextView
                        android:id="@+id/link_test"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Link test"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textAlignment="center"/>

                <View android:layout_width="120dp"
                      android:layout_height="1dp"
                      android:layout_marginTop="8dp"
                      android:layout_marginBottom="8dp"
                      android:background="@color/white"
                      android:layout_gravity="center"
                      android:alpha=".4"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>