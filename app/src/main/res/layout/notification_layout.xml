<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="temp"
                type="it.giovanni.arkivio.model.DarkModeModel" />

        <variable
                name="presenter"
                type="it.giovanni.arkivio.presenter.DarkModePresenter" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true"
            android:orientation="vertical">

        <include
                android:id="@+id/notification_item_1"
                layout="@layout/notification_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                bind:temp2="@{temp}" />

        <include
                android:id="@+id/notification_item_2"
                layout="@layout/notification_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                bind:temp2="@{temp}" />

        <include
                android:id="@+id/notification_item_3"
                layout="@layout/notification_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                bind:temp2="@{temp}" />

        <include
                android:id="@+id/notification_item_4"
                layout="@layout/notification_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                bind:temp2="@{temp}" />

    </LinearLayout>

</layout>