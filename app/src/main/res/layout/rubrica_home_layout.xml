<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:focusable="true">

    <RelativeLayout
            android:id="@+id/final_step_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <RelativeLayout
                android:id="@+id/final_step_people_container"
                android:layout_width="wrap_content"
                android:layout_height="50dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_users" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/flexboxlayout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@+id/final_step_people_container">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:focusable="true">

                <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/partecipanti_flex_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:alignItems="flex_start"
                        android:visibility="gone"
                        app:flexDirection="row"
                        app:flexWrap="wrap" />

            </ScrollView>

            <TextView
                    android:id="@+id/users_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:ellipsize="end"
                    android:hint="Aggiungi contatti"
                    android:maxLines="1"
                    android:textColor="@color/dark"
                    android:textColorHint="@color/grey_2"
                    android:textSize="16sp"
                    android:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="16dp">

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_alignParentBottom="true"
              android:background="@color/grey_1" />

    </RelativeLayout>

</LinearLayout>