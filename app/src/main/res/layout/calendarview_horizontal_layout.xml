<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="LUN"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MAR"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MER"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GIO"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VEN"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SAB"
                android:textColor="@color/black"
                android:textSize="14sp" />

        <it.giovanni.arkivio.customview.TextViewCustom
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="DOM"
                android:textColor="@color/black"
                android:textSize="14sp" />

    </LinearLayout>

    <it.giovanni.arkivio.customview.calendarview.CalendarView
            android:id="@+id/calendarview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:month_header="@layout/calendarview_horizontal_header"
            app:day_item="@layout/calendarview_horizontal_item"
            app:orientation="horizontal"
            app:scroll_mode="paged" />

</LinearLayout>