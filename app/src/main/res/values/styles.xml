    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppThemeNoDisplay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EditText1" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="EditText2" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHighlight">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:activatedBackgroundIndicator">@null</item>
    </style>

    <style name="EditText3" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/grey</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="ActionLabel" parent="android:Widget.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/action_label_text_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#626a73</item>
        <item name="android:colorForeground">#A9AAAB</item>
    </style>

    <style name="SwitchCompatDarkTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#626a73</item>
        <item name="android:colorForeground">#626a73</item>
    </style>

    <style name="tabFontStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
