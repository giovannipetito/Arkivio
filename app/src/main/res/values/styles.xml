    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="MyDialogTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/grey</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EmployeeButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EmployeeSearchEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="PopupTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
