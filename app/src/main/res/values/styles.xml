    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_dark_mode</item>
        <!-- @android:color/transparent fa in modo che la statusBar sia trasparente. -->
        <!-- windowBackground applica il colore (con gradiente) ad activity_main -->
    </style>

    <!-- Night application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background_light_mode</item>
    </style>

    <style name="AppThemeNoDisplay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <style name="ButtonNormalDarkMode" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_normal_dark_mode</item>
        <item name="android:textColor">@color/button_normal_text_color_dark_mode</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonEmptyDarkMode" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_empty_dark_mode</item>
        <item name="android:textColor">@color/button_empty_text_color_dark_mode</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonNormalLightMode" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_normal_light_mode</item>
        <item name="android:textColor">@color/button_normal_text_color_light_mode</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonEmptyLightMode" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_empty_light_mode</item>
        <item name="android:textColor">@color/button_empty_text_color_light_mode</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomLoginCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText1" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="colorControlNormal">@color/dark</item>
        <item name="colorControlActivated">@color/dark</item>
    </style>

    <style name="EditText2" parent="android:Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHighlight">@color/dark</item>
        <item name="colorAccent">@color/dark</item>
        <item name="android:activatedBackgroundIndicator">@null</item>
    </style>

    <style name="EditText3" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="DialogTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/grey_3</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupTheme" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorAccent</item>
    </style>

    <style name="ActionLabel" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/action_label_text_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#626a73</item>
        <item name="android:colorForeground">#A9AAAB</item>
    </style>

    <style name="SwitchCompatDarkTheme">
        <item name="colorControlActivated">#626a73</item>
        <item name="colorControlHighlight">#626a73</item>
        <item name="android:colorForeground">#A9AAAB</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_biometric_bottom_sheet</item>
    </style>

    <style name="BottomSheetDialogTheme1" parent="BaseBottomSheetDialog" />

    <!--Il metodo setStyle seguente Ã¨ da chiamare nel metodo onCreate() della classe astratta che-->
    <!--estende BottomSheetDialogFragment()-->
    <!--setStyle(STYLE_NORMAL, R.style.PendingBottomSheetDialogTheme2)-->
    <style name="BottomSheetDialogTheme2" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:colorBackground">@android:color/transparent</item>-->
        <item name="android:windowBackground">@color/white_transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:statusBarColor">@color/white_transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheetDialogTheme3" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:colorBackground">@android:color/transparent</item>-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="NunitoLight" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_light</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="NunitoRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="NunitoSemibold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="NunitoBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="NunitoExtrabold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="NunitoBlack" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_black</item>
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra</item>
    </style>

    <style name="ActionBarOverlayTheme" parent="android:Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="NoActionBarTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="NoTitleBarTheme" parent="android:Theme.Holo"/>

</resources>