<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                    android:angle="0"
                    android:startColor="@color/zaffiro_1"
                    android:centerColor="@color/zaffiro_2"
                    android:endColor="@color/zaffiro_3"
                    android:type="linear" />
        </shape>
    </item>

    <item android:top="0dp">
        <bitmap
                android:gravity="top|fill_horizontal"
                android:src="@drawable/blue_wave_top"
                android:tint="@color/azzurro" />
    </item>

</layer-list>