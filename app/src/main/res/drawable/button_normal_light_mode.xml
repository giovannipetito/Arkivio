<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NORMAL/ENABLED -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/blu" />
            <gradient android:endColor="@color/blu" android:startColor="@color/blu" />
            <stroke android:width="2dp" android:color="@color/blu" />
        </shape>
    </item>

    <!-- SELECTED/PRESSED -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/grey_3" />
            <gradient android:endColor="@color/grey_3" android:startColor="@color/grey_3" />
            <stroke android:width="2dp" android:color="@color/grey_3" />
        </shape>
    </item>

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/grey_3" />
            <gradient android:endColor="@color/grey_3" android:startColor="@color/grey_3" />
            <stroke android:width="2dp" android:color="@color/grey_3" />
        </shape>
    </item>

    <!-- DISABLED -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="24dp" />
            <solid android:color="@color/grey_1" />
            <gradient android:endColor="@color/grey_1" android:startColor="@color/grey_1" />
            <stroke android:width="2dp" android:color="@color/grey_1" />
        </shape>
    </item>

</selector>